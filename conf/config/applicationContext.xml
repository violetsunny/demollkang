<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <!-- 
       spring在加载时，检查base-package,将com.njwb包及其子包下的
                 类中，如果使用了spring的相关注解，都会解析成一个javabean(相当于原来的bean标签的配置)
     -->
    <context:component-scan base-package="com.njwb"/>
    
    
    <!-- 切点 -->
    <bean id="sleepPointcut" class="org.springframework.aop.support.JdkRegexpMethodPointcut">
    	<property name="pattern" value=".*sleep.*" />
    </bean>
    
   <!-- 切面 -->
   <bean id="apsect" class="org.springframework.aop.support.DefaultPointcutAdvisor">
   		<property name="advice"  value="humanHelper"/>
   		<property name="pointcut" value="sleepPointcut" />
   </bean>
   <!-- 织入 -->
    <bean id="humanProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
    	<property name="target"  value="human"/>
    	<property name="interceptorNames"  value="apsect"/>
    	<property name="proxyInterfaces"  value="com.njwb.service.Sleepable"/>
    </bean>
    
     <!-- 
       匿名对象 不需要id
     -->
	<bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>
</beans>           